#!/bin/bash

# shellcheck disable=SC1091
. /dev/stdin <<<"$(xrandr-auto.sh --get-qt-exports --set-dpi-only)"

# see https://github.com/symless/synergy-core/issues/4132
export QT_BEARER_POLL_TIMEOUT=-1

export GTK_MODULES="${GTK_MODULES:+$GTK_MODULES:}canberra-gtk-module"

# ensure xscreensaver receives idle inhibition calls
nohup sh -c "sleep 4; nohup xssproxy >/dev/null 2>&1 &" >/dev/null 2>&1 &
